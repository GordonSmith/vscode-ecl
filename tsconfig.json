{
    "compilerOptions": {
        "rootDir": ".",
        "module": "commonjs",
        "target": "es6",
        "outDir": "out",
        "sourceMap": true,
        "declaration": true,
        "declarationDir": "./types",
        "noImplicitAny": false,
        "noEmitOnError": false,
        "noUnusedLocals": true,
        "strictNullChecks": false,
        "importHelpers": true,
        "skipLibCheck": true,
        "noImplicitThis": true,
        "lib": [
            "es6",
            "dom"
        ]
    },
    "include": [
        "./src"
    ]
}