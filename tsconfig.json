{
    "compilerOptions": {
        "rootDir": "./src",
        "module": "es6",
        "moduleResolution": "node",
        "target": "ES2019",
        "outDir": "lib-es6",
        "jsx": "react",
        "allowJs": true,
        "sourceMap": true,
        "noImplicitAny": false,
        "noEmitOnError": false,
        "noUnusedLocals": false,
        "strictNullChecks": false,
        "importHelpers": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "skipLibCheck": true,
        "lib": [
            "dom",
            "ES2019"
        ]
    },
    "include": [
        "./src/**/*.ts",
        "./src/**/*.tsx"
    ]
}