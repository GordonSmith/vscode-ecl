{
    "version": "0.1.0",
    "compounds": [
        {
            "name": "Launch All",
            "configurations": [
                "Launch Extension",
                "Launch Server Adapter"
            ]
        }
    ],
    "configurations": [
        {
            "name": "play-hthor-submit",
            "type": "ecl",
            "request": "launch",
            "protocol": "https",
            "serverAddress": "play.hpccsystems.com",
            "port": 18010,
            "targetCluster": "hthor",
            "rejectUnauthorized": false,
            "resultLimit": 100,
            "timeoutSecs": 60,
            "user": "vscode_user",
            "password": ""
        },
        {
            "name": "Launch Extension",
            "type": "extensionHost",
            "request": "launch",
            // path to VSCode executable
            "runtimeExecutable": "${execPath}",
            "args": [
                "--disable-extensions",
                "--extensionDevelopmentPath=${workspaceRoot}",
                "--enable-proposed-api"
            ],
            "outFiles": [
                "${workspaceRoot}/dist/*.js"
            ],
            "stopOnEntry": false,
            "sourceMaps": true,
            "internalConsoleOptions": "neverOpen"
        },
        {
            "name": "Launch Server Adapter",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/dist/debugger.js",
            "args": [
                "--server=4711"
            ],
            "outFiles": [
                "${workspaceRoot}/dist/*.js"
            ],
            "stopOnEntry": false,
            "sourceMaps": true,
            "cwd": "${workspaceRoot}"
        },
        {
            "name": "webview-test",
            "type": "chrome",
            "request": "launch",
            "url": "file:///${workspaceRoot}/webview-test.html",
            "runtimeArgs": [
                "--disable-web-security"
            ],
            "webRoot": "${workspaceRoot}"
        },
        {
            "name": "index",
            "type": "chrome",
            "request": "launch",
            "url": "file:///${workspaceRoot}/index.html",
            "runtimeArgs": [
                "--disable-web-security"
            ],
            "webRoot": "${workspaceRoot}"
        },
    ]
}